<div class="row">

<% if @scores %>
    <div class="col-1"></div>
    <div class="col-10 page">
        <div class="sheet">
            <table class="table">
                <thead>
                <tr class="jee-table-header">
                    <th scope="col"> Technical Areas </th>
                    <th scope="col"> Indicators </th>
                    <th scope="col"> Score </th>
                    <th scope="col"> Goal </th>
                </tr>
                </thead>

                <tbody>
                <% @assessments['jee1']['technical_area_order'].each do |technical_area_id| %>
                    <% technical_area = @assessments['jee1']['technical_areas'][technical_area_id] %>
                    <tr>
                        <th class="border-right"
                            scope="row"
                            rowspan="<%= technical_area['indicators'].count %>">
                            <%= @data_dictionary[technical_area_id] %>
                        </th>
                        <td> <%= @data_dictionary[technical_area['indicators'][0]] %> </td>
                        <td> <% indicator_id = technical_area['indicators'][0].split('_')[2] %>
                        <%= @scores.find { | i | i['indicator_id'] == indicator_id }['score'] %>
                        </td>
                        <td> <input type="text"> </td>
                    </tr>

                    <% technical_area['indicators'].drop(1).each do |indicator| %>
                    <tr>
                        <td> <%= @data_dictionary[indicator] %> </td>
                        <td> <% indicator_id = indicator.split('_')[2] %>
                        <%= @scores.find { | i | i['indicator_id'] == indicator_id }['score'] %>
                        </td>
                        <td> <input type="text"> </td>
                    </tr>
                    <% end %>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-1"></div>
<% else %>
    <div class="col">
    <div>No assessment available</div>
    </div>
<% end %>

</div>
