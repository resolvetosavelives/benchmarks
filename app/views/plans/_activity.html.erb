<div
  class="row activity p-2"
  data-target="benchmark.activity"
>
  <div class="col-auto d-flex flex-row align-items-center">
    <span class="badge badge-pill badge-success badge-rounded-circle color-value-<%= benchmark_activity_level %>">
      <span class="activity-level"><%= benchmark_activity_level %></span>
    </span>
  </div>
  <div class="col-11">
    <strong><%= display_abbreviation %></strong>
    <span class="activity-text">
      <%= benchmark_activity_text %>
    </span>
  </div>
  <div class="col-1">
    <button
      class="delete close"
      type="button"
      data-action="benchmark#deleteActivity"
      data-benchmark-activity-id="<%= benchmark_activity_id %>"
    >
      <img src="/delete-button.svg" alt="Delete this activity"/>
    </button>
  </div>
</div>
